.box{
  width:90%;
  margin: 20rpx auto;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 10px rgba(0,0,0,0.16);
  border-radius:20rpx;
  padding: 32rpx 32rpx 136rpx;
  box-sizing: border-box;
}
/* 列表 */
.list {
  position: relative;
  width: 100%;
  height: 185rpx;
}
.top{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 编辑 */
.edit{
  width:72rpx;
  height:32rpx;
  line-height: 32rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(255,63,49,1);
  border-radius:4rpx;
  text-align: center;
  font-size: 20rpx;
}

/* 删除 */
.dele_edit {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
  bottom: 25rpx;
}

/* 编辑标题 */
.edit_btn {
  font-size: 20rpx;
  color: rgba(255,63,49,1);
  right: 30rpx;
}

/* 单选状态 */
.radio_chek {
  position: absolute;
  left: 0rpx;
  top: 70rpx;
  width: 50rpx;
  height: 50rpx;
}

/* 列表商品图片 */
.list_img {
  position: absolute;
  top: 20rpx;
  left: 70rpx;
  width: 144rpx;
  height: 144rpx;
}

/* 列表规格 */
.cart_g_name {
  position: absolute;
  left: 280rpx;
  font-size: 26rpx;
  color: #aaa;
  top: 75rpx;
}

/* 收藏 */
.collert {
  position: absolute;
  font-size: 28rpx;
  right: 40rpx;
  top: 30rpx;
}

/* 收藏图标 */
.collert_img {
  position: relative;
  top: 2rpx;
  width: 28rpx;
  height: 28rpx;
}

/* 列表商品名称 */
.list_name {
  position: absolute;
  left: 230rpx;
  top: 30rpx;
  width: 380rpx;
  /* background-color: red; */
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 列表商品价格 */
.list_price {
  position: absolute;
  font-size: 32rpx;
  color: #E10B09;
  left: 230rpx;
  bottom: 20rpx;
}

/* 列表商品删除 */
.list_del {
  position: absolute;
  right: 220rpx;
  bottom: 20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 44rpx;
}

/* 固定底部 */
.cont_bot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  background: #fff;
  border-top: 2rpx solid #ebebeb;
  padding-left:32rpx;
  box-sizing: border-box;
}

