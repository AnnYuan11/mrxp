/* pages/shop/shop.wxss */
.select{
  width:90%;
  margin: 0 auto;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 10px rgba(0,0,0,0.16);
  border-radius:20rpx;
  padding: 32rpx;
  box-sizing: border-box;
  margin-top: 20rpx;

}
.selectAll_box{
  display: flex;
  justify-content: space-between;
}
.edit{
  width:72rpx;
  height:32rpx;
  line-height: 32rpx;
  background:rgba(255,255,255,1);
  border:1px solid rgba(255,63,49,1);
  border-radius:4rpx;
  color: rgba(255,63,49,1);
  text-align: center;
  font-size: 20rpx;
}
.shop{
  display: flex;
  justify-content: space-between;
}
.goods{
  margin-left: 20rpx;
}
.order{
  display: flex;
  margin-top: 24rpx;
}
.order .img image{
  width:140rpx;
  height: 140rpx;
}
.mess{
  margin-left: 20rpx;
}
.mess text{
  font-size:24rpx;
  color:rgba(35,35,35,1);
}
.price{
  display: flex;
  justify-content: space-between;
  margin-top:20rpx;
}
.price .jg{
  font-size:28rpx;
  color:rgba(225,11,9,1);
}
.shop .check{
  margin-top: 10%;
}
checkbox .wx-checkbox-input{
   border-radius: 3%;/* 圆角 */
   width: 42rpx; /* 背景的宽 */
   height: 42rpx; /* 背景的高 */
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  width: 46rpx; /* 背景的宽 */
   height: 46rpx; /* 背景的高 */
   border: none;
   background: rgba(225,11,9,1);
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 3%;/* 圆角 */
   width: 43rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   height: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
/* 底部 */
.Tbottom{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 6px rgba(0,0,0,0.16);
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
}
.sub{
  width:250rpx;
  height:100rpx;
  background:rgba(225,0,4,1);
  text-align: center;
  color: #fff;
  line-height: 100rpx;
}
.jine text{
  font-size:24rpx;
  color:rgba(225,0,4,1);
  opacity:1;
}
.jine text.sf{
  margin:0 32rpx;
}
.jine text.hj{
  color: #909090;
}