/* pages/details/order_list/order_list.wxss */
.swiper-tab {
  width: 100%;
  line-height: 80rpx;
  background: #fff;
}

.tab-h {
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  white-space: nowrap;
}

.swiper-tab-list {
  font-size: 32rpx;
  display: inline-block;
  width: 25%;
  color: #9b9b9b;
  text-align: center;
}

.on {
  color: #E10004;
  font-weight: bold;
  height: 70rpx;
  border-bottom: 6rpx solid#E10004;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

/* 订单 */
.box {
  width: 92%;
  margin: 0 auto;

}

.section {
  width: 100%;
  margin: 32rpx 0;
  background: #fff;
  box-shadow: 0px 1px 8px rgba(0, 0, 0, 0.08);
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}

.order_num {
  display: flex;
  justify-content: space-between;
  margin: 24rpx 0;
}

.order_num text {
  font-size: 24rpx;
  color: rgba(35, 35, 35, 1);
}

.order_num text.state {
  color: #E10B09;
}

.order-box {
  width: 100%;
  border-bottom: 1px solid #E2E2E2;
  border-top: 1px solid #E2E2E2;
  padding: 24rpx 0;
  box-sizing: border-box;
}

.order {
  display: flex;
  margin-top: 24rpx;
}

.order .img {
  width: 140rpx;
  height: 140rpx;
}

.order .img image {
  width: 100%;
  height: 100%;
}

.mess {
  margin-left: 20rpx;
}

.mess text {
  font-size: 24rpx;
  color: rgba(35, 35, 35, 1);
}

.price {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.price .jg {
  font-size: 28rpx;
  color: rgba(225, 11, 9, 1);
}

.price .num {
  font-size: 28rpx;
  color: rgba(35, 35, 35, 1);
}

.button {
  display: flex;
  justify-content: space-between;
  width: 65%;
}

.sub {
  width: 176rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(226, 226, 226, 1);
  border-radius: 30rpx;
  text-align: center;
  color: #646464;
  font-size: 24rpx;
}

.sub.buy {
  background: #E10B09;
  color: #fff;
}