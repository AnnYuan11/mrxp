/* pages/dhzt/dhzt.wxss */
.title{
  width: 100%;
  background: #fff;
  padding: 34rpx;
  box-sizing: border-box;
 
}
.top{
  display: flex;
  justify-content: space-between;
}
.img{
  margin-top: 8%;
}
.img image{
  width: 108rpx;
  margin-top: 5%；
}
.message{
  width: 80%;
}
.message .name{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(35,35,35,1);
}

.qhdz_box text{
  font-size: 24rpx;
  color: rgba(35,35,35,1);
}
.qhdz_box .address{
  color: #909090;
}
.phone{
  width:100%;
  height:68rpx;
  line-height: 68rpx;
  text-align: center;
  border-radius:17px;
  color: #fff;
  align-items: center;
  margin-top: 20rpx;
}
/* 列表 */
.box{
  width: 90%;
  margin: 0 auto;
}
.list{
  width: 100%;
  background: #fff;
  box-shadow:0px 3px 10px rgba(0,0,0,0.16);
  border-radius: 10rpx;
  text-align: center;
  position: relative;
  padding: 0 34rpx 34rpx 34rpx;
  box-sizing: border-box;
  margin-bottom: 63rpx;
}
.dm_name{
  font-size:32rpx;
  font-weight:bold;
  color:rgba(35,35,35,1);
  margin: 0 0 20rpx 0;
  display: block;
}
.list .img_box{
  width: 224rpx;
  position: relative;
  right: 0;
  left:0;
  margin:auto;
  top:-16rpx;
}
.list .img_box image{
  width:100%;
}
.list .img_box text{
  font-size:28rpx;
  color:rgba(255,255,255,1);
  position: absolute;
  width: 100%;
  top:16%;
  right: 0;
  left:0;
  margin:auto;
}
.address_detail{
  display: block;
  font-size: 24rpx;
  text-align: left;
  color:rgba(144,144,144,1);
}
.distance{
  font-size:24rpx;
  color: #909090;
  position: absolute;
  right: 40rpx;
  top: 6%;
}
/* 搜索 */
.search_Box{
  width:100%;
  background:#fff;
  border-radius:32px;
  padding: 16rpx 32rpx;
  box-sizing: border-box;
  display: flex;
  margin: 50rpx 0;
  
}
.search_Box image{
  width: 34rpx;
  margin-top: 8rpx;
}
.serch{
  font-size:24rpx;
  color:rgba(194,194,194,1);
}
.search_Box input{
  margin-left: 20rpx;
}