<!--pages/dhzt/dhzt.wxml-->
<view class="title">
  <view class="top">
    <view class="img">
      <image src="/img/public/logo.png" mode="widthFix"></image>
    </view>
    <view class="message">
      <text class="name">
      {{shopName}}
    </text>
      <view class="qhdz_box">
        <text class="qhdz">取货地址：</text>
        <text class="address">{{address}}</text>
      </view>
    </view>
  </view>

  <view class="phone" style="background:{{color}}">
    <image src="/img/public/phone.png" mode="widthFix" style="width:40rpx;vertical-align: middle"></image>
    <text>团长：{{name}}</text>
  </view>
</view>
<i-load-more tip="附近提货点" loading="{{ false }}" />
<view class="box">
<block wx:for="{{list}}">
  <view class="list" catchtap="change" data-item="{{item}}">
    <view class="img_box">
      <image src="{{col=='0'?'/img/public/yingye.png':'/img/public/xiuxi.png'}}" mode="widthFix"></image>
      <text>营业中</text>
    </view>
    <text class="dm_name">{{item.shopName}}</text>
    <text class="address_detail">{{item.province}}{{item.city}}{{item.area}}{{item.street}}{{item.address}}    </text>
    <text class="distance">{{item.distance}}km</text>
  </view>
</block>
</view>