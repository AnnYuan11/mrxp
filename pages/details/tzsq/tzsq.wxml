<!--pages/details/tzsq/tzsq.wxml-->
<view class="box">
  <view class="sqr">
    <text class="important">*</text>
    <text>申请人</text>
    <input placeholder="请填写姓名" class="input"></input>
  </view>
  <view class="sqr">
    <text class="important">*</text>
    <text>手机号</text>
    <input placeholder="请填写手机号" class="input"></input>
  </view>
  <view class="sqr">
    <text class="important">*</text>
    <text>团长地址</text>
    <picker mode="multiSelector" placeholder="请选择地址"bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
      <view class="picker" style='font-size:28rpx'>
        {{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}，{{multiArray[3][multiIndex[3]]}}
      </view>
    </picker>
    <view class="picker"  bindtap="getCenterLocation">{{address}}</view>
  </view>
  <view class="sqrs">
    <image src="/img/details/map.png" mode="widthFix" style="width:28rpx"></image>
    <text class="td">请在地图上选点，方便居民按距离查找你</text>
  </view>
  <view class="sqr">
    <text class="important">*</text>
    <text>店铺名称</text>
    <input placeholder="请填写团名" class="input"></input>
  </view>
  <view class="sqr">
    <text class="important">*</text>
    <text>推荐人</text>
    <input placeholder="请填写推荐人的电话" class="input"></input>
  </view>
  <button style="background:{{color}};width:100%" class="sub">提交申请</button>
</view>
