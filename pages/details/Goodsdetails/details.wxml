<!-- 底部 -->
<view class="bottom">
	<view class="icon_box">
		<view class="index" catchtap="toIndex">
			<image src="{{imgUrl}}img/details/sy.png" mode="widthFix"></image>
			<text>首页</text>
		</view>
		<view class="index" catchtap="toGwc">
			<image src="{{imgUrl}}img/details/gwc.png" mode="widthFix"></image>
			<text>购物车</text>
		</view>
		<view class="index" catchtap="handleOpen1">
			<image src="{{imgUrl}}img/details/share.png" mode="widthFix"></image>
			<text>分享</text>
		</view>
	</view>
	<view class="noClick" wx:if="{{isBuy!='1'}}">{{isBuy}}</view>
	<block wx:if="{{isBuy==1}}">
		<view class="bot BuyNow" catchtap="buyNow">立即购买</view>
		<view class="bot shoppingCart" catchtap="joinGwc" data-spid="{{list.id}}" data-sendType="{{list.sendType}}">加入购物车</view>
	</block>
</view>
<!-- 分享 -->
<view class="share_box" wx:if="{{ishow}}">
	<view class="share">
		<view class="fxd">
			<i-divider content="分享到"></i-divider>
		</view>
		<view class="wechat">
		<button open-type="share"	>
			<view class="item">
				<image	src="{{imgUrl}}img/details/dd3.png"></image>
				<text>微信好友</text>
			</view>
			</button>
			<view class="item" catchtap="handleClickItem1">
				<image	src="{{imgUrl}}img/details/dd3.png"></image>
				<text>生成海报</text>
			</view>
		</view>
		<view class="qx" catchtap="handleCancel">取消</view>
	</view>
</view>
<!-- 海报 -->
<view class='imagePathBox' wx:if="{{maskHidden}}">
	<image src="{{shareImage}}" class='shengcheng'></image>
	<button class='baocun' catchtap='eventSave'>保存图片</button>
  <image  src="{{imgUrl}}img/details/close.png" mode="widthFix" style="width:40rpx" class="close" bindtap="close"></image>
</view>
<canvasdrawer painting="{{painting}}" bind:getImage="eventGetImage"/>