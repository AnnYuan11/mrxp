<!-- 商品详情 -->
<view class="details_box">
   <view class="swiper-tab">
      <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">商品详情</view>
      <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">购买记录</view>
      <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">商品评价</view>
    </view>
    <view class="swiper-box" wx:if="{{currentTab=='0'}}">
       <scroll-view scroll-y style="height: 100%" bindscrolltolower="bindscrolltolower2">
         <view class="img_goods">
            <image src="/img/pic/1.png"></image>
          </view>
        </scroll-view>
        <scroll-view scroll-y style="height: 100%" bindscrolltolower="bindscrolltolower2">
