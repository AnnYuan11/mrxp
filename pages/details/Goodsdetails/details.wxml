<!--pages/details/Goodsdetails/details.wxml-->
<import src="../../../utils/wxParse/wxParse.wxml" />
<view class="img_goods">
	<swiper class="swiper-box" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}" style="height:750rpx">
		<block wx:for="{{background}}" wx:key="*this">
			<swiper-item>
				<image src="{{imgUrl}}{{item}}"></image>
			</swiper-item>
		</block>
	</swiper>
</view>
<view class="goods_introduce">
	<image src="{{imgUrl}}img/details/bg_goodsdetails.png" mode="widthFix"></image>
	<view class="price_box">￥
		<text class="font_xl">{{list.price}}</text>
		<text style="text-decoration: line-through;">￥{{list.crossedPrice}}</text>
	</view>
	<view class="top_right">
		<text class="font">{{list.pickDate}}</text>
		<text class="font_sm">{{list.sendType}}</text>
	</view>
	<view class="info_top">
		<view class="title_info">
			{{list.productInfo.commodityName}}
		</view>
		<view class="sales">
			<view class="info_pros">
				<text>今日已售{{list.salesNumber}}</text>
				<text class="instructions">/限售{{list.limitBuyNumbers}}件</text>
			</view>
			<view class="fans">
				粉丝：{{list.viewNumber}}人
			</view>

		</view>
		<view class="gys_box">
			<image src="{{imgUrl}}img/details/gys.png" mode="widthFix"></image>
			<text>供应商：{{list.productInfo.supplierInfo.supplieName}}</text>
		</view>
	</view>
</view>

<!-- 供应商资质 -->
<navigator url="/pages/details/ghszz/ghszz?img={{list.productInfo.supplierInfo.bannerPhoto}}" hover-class="none">
	<view class="gyszz_box">
		<i></i>
		<text>供应商资质</text>
	</view>
</navigator>
