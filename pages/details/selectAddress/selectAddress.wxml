<!--pages/selectAddress.wxml-->
 <view class="section">
    <view class="section__title">收货地址：</view>
    <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
      <view class="picker" style='font-size:28rpx'>
        {{multiArray[0][multiIndex[0]]}}，{{multiArray[1][multiIndex[1]]}}，{{multiArray[2][multiIndex[2]]}}，{{multiArray[3][multiIndex[3]]}}
      </view>
    </picker>
  </view>
<view class="section">
  <view class="section__title">详细地址：</view>
  <input placeholder="请填写详细地址" class="input"></input>
</view>
<view class="section">
  <view class="section__title">联系人：</view>
  <input placeholder="请填写姓名" class="input"></input>
</view>
<view class="section">
  <view class="section__title">手机号：</view>
  <input placeholder="请填写手机号" class="input"></input>
</view>
<button style="background:{{color}};width:92%" class="sub">保存</button>