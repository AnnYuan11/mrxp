/* pages/details/sppj/sppj.wxss */
.box{
  padding: 32rpx;
  box-sizing: border-box;
}
.project_describe{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.project_describe image{
  width: 100rpx;
}
.project_describe text{
  font-size:24rpx;
  color:rgba(35,35,35,1);
  line-height: 46rpx;
  margin-left: 20rpx;
}
.textarea{
  margin-top: 32rpx;
}
.textarea textarea{
  width: 100%;
  height: 200rpx;
  background: #fff;
  padding: 32rpx;
  box-sizing: border-box;
}
/* 上传图片 */
.uploadImg{
  margin-top: 20rpx;
}
.addImg{
  width:180rpx;
  height:180rpx;
  background:rgba(255,255,255,1);
  text-align: center;
  font-size:24rpx;
  color:rgba(144,144,144,1);
  line-height: 57rpx;
  padding-top: 35rpx;
  box-sizing: border-box;
}
.addImg image{
  display: block;
  margin:0 auto;
}
.uploadImg{
  display: flex;
  width:100%;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.imgInfo .del{
  display:inline-block;
  width:30rpx;
  position:absolute;
  right:40rpx;
  top: -20rpx;
}
.imgInfo .del image{
  width: 100%;
}
.imgInfo{
  width: 33%;
  float: left;
  position: relative;
  margin-bottom: 31rpx;

}
.btn-area{
  width:100%;
  height:100rpx;
  background:rgba(254,27,27,1);
  color: #fff;
  line-height: 100rpx;
  font-size:28rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
}
button{
  width:100%;
  height:88rpx;
  line-height: 72rpx!important;
  color: #fff;
  background:rgba(254,27,27,1); 
  font-size:32rpx;
  color:rgba(255,255,255,1);
}