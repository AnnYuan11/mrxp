<!--pages/index/index.wxml-->
<view class="box">
	<view class="top">
		<view class="img">
			<image src="/img/public/logo.png" mode="widthFix"></image>
		</view>
		<view class="message">
			<text class="name">紫薇花园州每一天店</text>
			<view class="qhdz_box">
				<text class="address">选择团长</text>
			</view>
		</view>
		<view class="line"></view>
		<view class="fans">
			<text class="num">200</text>
			<text>粉丝数</text>
		</view>
	</view>
	<!-- 搜索 -->
	<view class="search_Box">
		<image src="/img/details/search.png" mode="widthFix"></image>
		<input placeholder="搜索商品名称" placeholder-class="serch" bindconfirm="search"></input>
	</view>
	<!-- 轮播 -->
	<swiper class="swiper-box" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" duration="{{duration}}">
		<block wx:for="{{background}}" wx:key="*this">
			<swiper-item>
				<image src="{{item}}"></image>
			</swiper-item>
		</block>
	</swiper>
	<!-- 广播 -->
	<view class='notice'>
		<image style='width:62rpx;height:62rpx;margin-top:2%' src="/img/details/lb.png"></image>
		<swiper class="swiper_container" vertical="true" autoplay="true" circular="true" interval="2000">
			<block wx:for="{{content}}">
				<swiper-item>
					<view class="swiper_item">{{item.biaoti}}</view>
				</swiper-item>
			</block>
		</swiper>
	</view>
</view>
