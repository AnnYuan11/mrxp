.flow{
  width: 100%;
  height: 100vh;
  background:rgba(0,0,0,0.6);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99999999;
}
.img_box{
  width: 90%;
  margin:0 auto;
  position: relative;
  margin-top: 23%;
}
.img_box image{
  width: 100%;
}
