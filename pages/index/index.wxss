/* 轮播 */
swiper{
  width: 100%;
  height: 280rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
  margin-bottom: 2rpx;
}
.swiper-box .wx-swiper-dot{
  width:40rpx;
  display: inline-flex;
  height: 12rpx;
  margin-left: 10rpx;
}
.swiper-box .wx-swiper-dot::before{
  content: '';
  flex-grow: 1; 
  background: #fff;
  border-radius: 8rpx;
  width:40rpx;
  display: inline-flex;
  height: 12rpx;
}
.swiper-box .wx-swiper-dot-active{
  width:12rpx;
  display: inline-flex;
  height: 10rpx; 
}
